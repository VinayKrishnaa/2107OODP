package sce.cz2002.project;

public class OrderItem{

	private int roomID;
	private String remarks;
	private String status;
	private String name;

	private float price;

	public OrderItem(String name, float price, int roomID, String remarks, String status) {
		this.roomID = roomID;
		this.remarks = remarks;
		this.status = status;
	}

	public int getRoomID() {
		return roomID;
	}

	public void setRoomID(int roomID) {
		this.roomID = roomID;
	}

	public String getStatus() {
		return status;
	}

	public void setStatus(String status) {
		this.status = status;
	}

	public String getRemarks() {
		return remarks;
	}

	public void setRemarks(String remarks) {
		this.remarks = remarks;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	// returns the variables of each order item as a string
	@Override
	public String toString() {
		return " " + name + " " + price + " " + roomID + " " + remarks + " " + status + " ";
	}

}
